<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        >
        <layer-list>
            <item android:left="2dp" android:bottom="5dp">
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#4FB06C" android:startColor="#4F9360" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_pressed="true"
        >
        <layer-list>
            <item android:left="2dp" android:bottom="5dp">
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="#3D3D3D" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#4FB06C" android:startColor="#4FB06C" />
                    <stroke android:width="1dp" android:color="#3D3D3D" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>